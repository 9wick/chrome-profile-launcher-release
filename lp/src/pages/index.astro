---
import BaseLayout from "../layouts/BaseLayout.astro";
import Download from "../components/Download.astro";
import FAQ from "../components/FAQ.astro";
import FeatureGrid from "../components/FeatureGrid.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import HowToUse from "../components/HowToUse.astro";
import Steps from "../components/Steps.astro";
import LanguageSwitch from "../components/LanguageSwitch.astro";
import { content } from "../content/strings";
---

<BaseLayout title={content.en.siteTitle} description={content.en.description} siteTitle={content.en.siteTitle} lang="en">
	<LanguageSwitch slot="lang" current="en" />
	<Hero {...content.en.hero} />
	<main>
		<HowToUse {...content.en.howToUse} />
		<FeatureGrid {...content.en.features} />
		<Steps {...content.en.steps} />
		<Download {...content.en.download} />
		<FAQ {...content.en.faq} />
	</main>
	<Footer {...content.en.footer} />
</BaseLayout>
