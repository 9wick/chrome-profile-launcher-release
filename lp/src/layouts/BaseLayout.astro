---
const { title, description, siteTitle, lang } = Astro.props;
const baseUrl = import.meta.env.BASE_URL ?? "/";
const withBase = (path) => `${baseUrl}${path}`.replace(/\/\/+/g, "/");
const homePath = lang === "ja" ? withBase("ja/") : withBase("");
---

<html lang={lang}>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Zen+Kaku+Gothic+New:wght@400;500;700&family=Zen+Old+Mincho:wght@600&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<div class="bg-orb orb-1" aria-hidden="true"></div>
		<div class="bg-orb orb-2" aria-hidden="true"></div>
		<div class="bg-orb orb-3" aria-hidden="true"></div>
		<div class="page">
			<header class="site-header">
				<div class="container header-inner">
					<a class="brand" href={homePath}>{siteTitle}</a>
					<div class="header-actions">
						<slot name="lang" />
					</div>
				</div>
			</header>
			<slot />
		</div>
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light;
		--bg: #0b0f14;
		--bg-soft: #111824;
		--card: #151d2b;
		--card-border: rgba(255, 255, 255, 0.08);
		--text: #eef2f4;
		--text-muted: rgba(238, 242, 244, 0.68);
		--accent: #f2b84b;
		--accent-2: #36c5b2;
		--accent-3: #ff7846;
		--font-body: "Zen Kaku Gothic New", "Hiragino Kaku Gothic ProN", "Yu Gothic",
			sans-serif;
		--font-display: "Zen Old Mincho", "Hiragino Mincho ProN", "Yu Mincho", serif;
	}

	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}

	body {
		margin: 0;
		min-height: 100vh;
		font-family: var(--font-body);
		background: radial-gradient(circle at top, rgba(54, 197, 178, 0.15), transparent 45%),
			radial-gradient(circle at 30% 30%, rgba(242, 184, 75, 0.12), transparent 35%),
			linear-gradient(180deg, #0b0f14 0%, #0f1824 55%, #0b0f14 100%);
		color: var(--text);
	}

	a {
		color: inherit;
		text-decoration: none;
	}

	.page {
		position: relative;
		overflow: hidden;
	}

	section {
		padding: 96px 0;
		position: relative;
		z-index: 1;
	}

	.container {
		width: min(1120px, 90vw);
		margin: 0 auto;
	}

	.section-title {
		font-family: var(--font-display);
		font-size: clamp(1.8rem, 1.4rem + 1.6vw, 2.6rem);
		margin: 0 0 16px;
		letter-spacing: 0.04em;
	}

	.section-lead {
		color: var(--text-muted);
		margin: 0 0 32px;
		font-size: 1.05rem;
	}

	.card {
		background: var(--card);
		border: 1px solid var(--card-border);
		border-radius: 20px;
		padding: 28px;
		box-shadow: 0 24px 60px rgba(0, 0, 0, 0.35);
	}

	.btn {
		display: inline-flex;
		align-items: center;
		gap: 10px;
		padding: 12px 22px;
		border-radius: 999px;
		font-weight: 600;
		transition: transform 0.2s ease, box-shadow 0.2s ease;
	}

	.btn-primary {
		background: linear-gradient(120deg, var(--accent), var(--accent-3));
		color: #1a1408;
		box-shadow: 0 18px 30px rgba(242, 184, 75, 0.3);
	}

	.btn-secondary {
		border: 1px solid rgba(255, 255, 255, 0.18);
		color: var(--text);
	}

	.btn:hover {
		transform: translateY(-2px);
		box-shadow: 0 18px 30px rgba(0, 0, 0, 0.3);
	}

	.badge {
		display: inline-flex;
		gap: 8px;
		align-items: center;
		padding: 6px 14px;
		border-radius: 999px;
		border: 1px solid rgba(54, 197, 178, 0.4);
		color: var(--accent-2);
		font-size: 0.85rem;
		font-weight: 600;
		letter-spacing: 0.04em;
	}

	.reveal {
		opacity: 0;
		transform: translateY(18px);
		animation: fadeUp 0.7s ease forwards;
		animation-delay: var(--delay, 0s);
	}

	.bg-orb {
		position: absolute;
		border-radius: 50%;
		opacity: 0.7;
		z-index: 0;
		animation: float 18s ease-in-out infinite;
	}

	.orb-1 {
		width: 320px;
		height: 320px;
		top: -80px;
		left: -40px;
		background: radial-gradient(circle, rgba(242, 184, 75, 0.3), transparent 65%);
	}

	.orb-2 {
		width: 420px;
		height: 420px;
		top: 420px;
		right: -120px;
		background: radial-gradient(circle, rgba(54, 197, 178, 0.25), transparent 70%);
		animation-delay: 4s;
	}

	.orb-3 {
		width: 240px;
		height: 240px;
		bottom: 140px;
		left: 14%;
		background: radial-gradient(circle, rgba(255, 120, 70, 0.28), transparent 70%);
		animation-delay: 8s;
	}

	@keyframes fadeUp {
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes float {
		50% {
			transform: translateY(16px);
		}
	}

	@media (max-width: 768px) {
		section {
			padding: 72px 0;
		}
	}
	main,
	header,
	footer {
		position: relative;
		z-index: 1;
	}

	.site-header {
		position: sticky;
		top: 0;
		z-index: 2;
		backdrop-filter: blur(18px);
		background: linear-gradient(180deg, rgba(11, 15, 20, 0.85), rgba(11, 15, 20, 0.4));
		border-bottom: 1px solid rgba(255, 255, 255, 0.06);
	}

	.header-inner {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 16px 0;
	}

	.brand {
		font-weight: 700;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		font-size: 0.85rem;
		color: var(--text-muted);
	}

	.header-actions {
		display: flex;
		align-items: center;
		gap: 16px;
	}
</style>
