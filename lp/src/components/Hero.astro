---
const { badge, title, lead, actions, meta, image } = Astro.props;
---

<section class="hero">
	<div class="container hero-grid">
		<div class="hero-copy">
			<span class="badge reveal" style="--delay: 0.05s">{badge}</span>
			<h1 class="hero-title reveal" style="--delay: 0.12s">
				{title[0]}
				<br />
				{title[1]}
			</h1>
			<p class="hero-lead reveal" style="--delay: 0.2s">{lead}</p>
			<div class="hero-actions reveal" style="--delay: 0.28s">
				<a class="btn btn-primary" href={actions.primary.href}>{actions.primary.label}</a>
				<a class="btn btn-secondary" href={actions.secondary.href}>
					{actions.secondary.label}
				</a>
			</div>
			<div class="hero-meta reveal" style="--delay: 0.36s">
				{meta.map((item) => (
					<span>{item}</span>
				))}
			</div>
		</div>
		<div class="hero-sample reveal" style="--delay: 0.2s">
			<img
				src={image.src}
				alt={image.alt}
				width={image.width}
				height={image.height}
				loading="lazy"
				decoding="async"
			/>
		</div>
	</div>
</section>

<style>
	.hero {
		padding-top: 120px;
		padding-bottom: 120px;
		position: relative;
		z-index: 1;
	}

	.hero-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 48px;
		align-items: center;
	}

	.hero-title {
		font-size: clamp(2.6rem, 2rem + 2vw, 3.6rem);
		margin: 18px 0 16px;
		letter-spacing: 0.02em;
	}

	.hero-lead {
		color: var(--text-muted);
		line-height: 1.7;
		font-size: 1.1rem;
		margin: 0 0 28px;
	}

	.hero-actions {
		display: flex;
		flex-wrap: wrap;
		gap: 12px;
		margin-bottom: 24px;
	}

	.hero-meta {
		display: flex;
		flex-wrap: wrap;
		gap: 16px;
		color: var(--text-muted);
		font-size: 0.95rem;
		font-family: var(--font-mono);
	}

	.hero-meta span {
		padding-left: 16px;
		position: relative;
	}

	.hero-meta span::before {
		content: "";
		width: 6px;
		height: 6px;
		border-radius: 50%;
		background: var(--accent-2);
		position: absolute;
		left: 0;
		top: 8px;
	}

	.hero-sample {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.hero-sample img {
		width: min(560px, 100%);
		height: auto;
		display: block;
		border-radius: 24px;
		box-shadow: 0 22px 44px rgba(15, 23, 36, 0.25);
	}

	@media (max-width: 768px) {
		.hero {
			padding-top: 96px;
			padding-bottom: 84px;
		}
	}
</style>
