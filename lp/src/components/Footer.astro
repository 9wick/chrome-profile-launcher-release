---
const { title, lead, links } = Astro.props;
---

<footer>
	<div class="container footer">
		<div>
			<p class="footer-title">{title}</p>
			<p class="footer-lead">{lead}</p>
		</div>
		<div class="footer-links">
			{links.map((link) => (
				<a href={link.href}>{link.label}</a>
			))}
		</div>
	</div>
</footer>

<style>
	footer {
		padding: 64px 0 80px;
		border-top: 1px solid rgba(255, 255, 255, 0.08);
		background: linear-gradient(180deg, rgba(21, 29, 43, 0.6), rgba(11, 15, 20, 0.9));
	}

	.footer {
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;
		gap: 24px;
		align-items: center;
	}

	.footer-title {
		font-family: var(--font-display);
		font-size: 1.2rem;
		margin: 0 0 8px;
	}

	.footer-lead {
		margin: 0;
		color: var(--text-muted);
	}

	.footer-links {
		display: flex;
		gap: 20px;
		color: var(--text-muted);
		font-weight: 600;
	}

	.footer-links a:hover {
		color: var(--accent);
	}
</style>
