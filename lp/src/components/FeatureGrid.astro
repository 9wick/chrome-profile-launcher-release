---
const { title, lead, items } = Astro.props;
---

<section>
	<div class="container">
		<h2 class="section-title reveal" style="--delay: 0.05s">{title}</h2>
		<p class="section-lead reveal" style="--delay: 0.12s">{lead}</p>
		<div class="feature-grid">
			{items.map((item, index) => (
				<article class="card reveal" style={`--delay: ${0.18 + index * 0.06}s`}>
					<h3>{item.title}</h3>
					<p>{item.body}</p>
				</article>
			))}
		</div>
	</div>
</section>

<style>
	.feature-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
		gap: 24px;
	}

	.feature-grid h3 {
		margin: 0 0 12px;
		font-size: 1.2rem;
	}

	.feature-grid p {
		margin: 0;
		color: var(--text-muted);
		line-height: 1.6;
	}
</style>
